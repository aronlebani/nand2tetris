/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
	HalfAdder(a=b, b=c, carry=w, sum=x);
	HalfAdder(a=a, b=x, carry=y, sum=sum);
	Or(a=y, b=w, out=carry);
}
